  <script>
    // --- To-Do/Note-Taking App Logic ---
    function loadTodos() {
      const todos = JSON.parse(localStorage.getItem('todos')) || [];
      const list = document.getElementById('todoList');
      list.innerHTML = '';
      todos.forEach((item, idx) => {
        const li = document.createElement('li');
        li.className = 'todo-item';
        li.innerHTML = `<span>${item}</span> 
          <span class="remove" onclick="removeTodo(${idx})">&#10005;</span>`;
        list.appendChild(li);
      });
    }
    function addTodo() {
      const input = document.getElementById('todoInput');
      let val = input.value.trim();
      if(!val) return;
      let todos = JSON.parse(localStorage.getItem('todos')) || [];
      todos.push(val);
      localStorage.setItem('todos', JSON.stringify(todos));
      input.value = '';
      loadTodos();
    }
    function removeTodo(idx) {
      let todos = JSON.parse(localStorage.getItem('todos')) || [];
      todos.splice(idx,1);
      localStorage.setItem('todos', JSON.stringify(todos));
      loadTodos();
    }
    window.addEventListener('DOMContentLoaded', loadTodos);
    // --- Product Page Logic ---
    const products = [
      {title: "Learning Python", category: "Book", price: 499, rating: 4.5},
      {title: "Android Mobile", category: "Phone", price: 8999, rating: 4.0},
      {title: "Bluetooth Headset", category: "Accessory", price: 1499, rating: 4.7},
      {title: "Data Structures Book", category: "Book", price: 399, rating: 4.8},
      {title: "Silicon Cover", category: "Accessory", price: 399, rating: 4.3}
    ];
    function showProducts(prodList){
      document.getElementById('productGrid').innerHTML = prodList.map(p =>
        `<div class="product-card">
          <div class="product-title">${p.title}</div>
          <div>Category: ${p.category}</div>
          <div>Price: ₹${p.price}</div>
          <div>Rating: <span class="stars">${'★'.repeat(Math.round(p.rating))}</span> (${p.rating})</div>
        </div>`
      ).join('');
    }
    function filterProducts(){
      let cat = document.getElementById('categoryFilter').value;
      let min = +document.getElementById('minPrice').value || 0;
      let max = +document.getElementById('maxPrice').value || Number.MAX_SAFE_INTEGER;
      let sort = document.getElementById('sortCriteria').value;
      let filtered = products.filter(p =>
        (cat === "All" || p.category === cat) &&
        p.price >= min &&
        p.price <= max
      );
      if(sort === "price-asc") filtered.sort((a,b) => a.price-b.price);
      else if(sort === "price-desc") filtered.sort((a,b) => b.price-a.price);
      else if(sort === "rating") filtered.sort((a,b) => b.rating-a.rating);
      showProducts(filtered);
    }
    window.addEventListener('DOMContentLoaded', ()=>showProducts(products));
  </script>
